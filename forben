<body>
  <div class="card" id="card">
    <div class="heart">ðŸ’–</div>
    <h1 id="title">Will you be my Valentine?</h1>
    <p id="message">Choose wiselyâ€¦ ðŸ’•</p>

    <div class="buttons" id="buttons">
      <button class="yes" id="yesBtn">Yes ðŸ’˜</button>
      <button class="no" id="noBtn">No ðŸ™ˆ</button>
    </div>
  </div>

  <script>
    const yesBtn = document.getElementById("yesBtn");
    const noBtn = document.getElementById("noBtn");
    const buttons = document.getElementById("buttons");
    const title = document.getElementById("title");
    const message = document.getElementById("message");
    const card = document.getElementById("card");

    let scale = 1;
    let confirmed = false;

    const noTexts = [
      "No ðŸ™ˆ",
      "Still no?",
      "Are you sure?? ðŸ˜³",
      "Wrong choice ðŸ˜¬",
      "Try again ðŸ˜",
      "Be honest ðŸ˜Œ"
    ];

    yesBtn.addEventListener("click", () => {
      if (!confirmed) {
        confirmed = true;
        title.innerText = "Are you sure? ðŸ˜";
        message.innerText = "Press No to decideâ€¦ if you can ðŸ˜Œ";
      } else {
        title.innerText = "YAYYY ðŸ’•";
        message.innerText = "Youâ€™re officially my Valentine ðŸ’˜";
        buttons.innerHTML = "ðŸ’–ðŸ’–ðŸ’–ðŸ’–ðŸ’–";
        launchConfetti();
      }
    });

    noBtn.addEventListener("mouseover", moveNo);
    noBtn.addEventListener("touchstart", moveNo);

    function moveNo() {
      if (!confirmed) return;

      const maxX = buttons.offsetWidth - noBtn.offsetWidth;
      const maxY = buttons.offsetHeight - noBtn.offsetHeight;

      noBtn.style.left = Math.random() * maxX + "px";
      noBtn.style.top = Math.random() * maxY + "px";

      noBtn.innerText = noTexts[Math.floor(Math.random() * noTexts.length)];

      scale = Math.min(scale + 0.15, 2.2);
      yesBtn.style.transform = `scale(${scale})`;

      card.classList.add("shake");
      setTimeout(() => card.classList.remove("shake"), 350);
    }

    function launchConfetti() {
      for (let i = 0; i < 120; i++) {
        const c = document.createElement("div");
        c.className = "confetti";
        c.style.left = Math.random() * 100 + "vw";
        c.style.background = `hsl(${Math.random() * 360}, 80%, 60%)`;
        c.style.animationDuration = 2 + Math.random() * 2 + "s";
        document.body.appendChild(c);
        setTimeout(() => c.remove(), 4000);
      }
    }
  </script>
